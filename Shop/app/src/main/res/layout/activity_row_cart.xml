<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10">
    <LinearLayout
        android:layout_margin="3dp"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <ImageView
            android:adjustViewBounds="true"
            android:layout_margin="5dp"
            android:id="@+id/imagegiohang"
            android:layout_width="match_parent"
            android:layout_height="100dp" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="7"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/textviewtenmonhang"
            android:text="Tên món hàng"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="5dp"
            android:text="Giá món hàng"
            android:textColor="@color/colorPrimary"
            android:id="@+id/textviewgiamonhang"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/buttonminusleft"
                android:layout_marginTop="5dp"
                android:textSize="30sp"
                android:text="-"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />
            <Button
                android:focusable="false"
                android:id="@+id/buttonvalue"
                android:layout_marginTop="5dp"
                android:textSize="30sp"
                android:text="1"
                android:layout_width="70dp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/buttonminusright"
                android:layout_marginTop="5dp"
                android:textSize="30sp"
                android:text="+"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>